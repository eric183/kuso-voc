model User {
  id              Int       @default(autoincrement()) @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  name            String
  email           String  @unique
  isAdmin         Boolean @default(false)
  isActive        Boolean @default(true)
  isDeleted       Boolean @default(false)
}

